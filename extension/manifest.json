{
  "manifest_version": 3,
  "name": "isSpam",
  "version": "1.00",
  "description": "Classifies email content as spam or ham using a custom ML API.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://isspam-ys1h.onrender.com/*"        
  ],
  "action": {
    "default_title": "Analyze Email"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [  
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"] 
    }
  ]
}